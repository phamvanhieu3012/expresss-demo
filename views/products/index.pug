extends ../layout/common

block content
	h1 Products
	
	.d-flex.align-items-center
		form.d-flex.ml-auto(action='/products', method='GET')
			input.form-control(type='text', name='q')
			button.btn.btn-primary.ml-2 Search

	.row
		each product in products
			.col-sm-6.col-md-4.col-lg-3
				.card.mb-3
					img.card-img-top(src=product.image)
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						a.btn.btn-primary.mb-auto(href='/cart/add/'+ product.id) Add to cart